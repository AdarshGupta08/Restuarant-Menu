public class Driver1
{
	 static
	 {
		System.out.println("WELCOME TO SPICE LONG RESTAURANT ");
		System.out.println();
		System.out.println("**************************************");
		System.out.println("HOW MAY I CAN HELP YOU SIR / MAM ");
		System.out.println();
		System.out.println("**************************************");
	 }


	 public static void main (String[] args )
	 {
		 Scanner sc = new Scanner(System.in);

			System.out.println("Enter 1 for Signup");
			System.out.println("Enter 2 for Login");
			System.out.println("Enter 3 for Exit");
			Rest r = new Registration();// UPCASTING
			Menu m=new Menu();
			int n = sc.nextInt();
			switch (n)
			{
			case 1:
				r.Signup();
				System.out.println("*********************************");
				System.out.println(" YOU HAVE SUCCESSFULLY SIGNUP");
				System.out.println("*********************************");
				System.out.println("Enter 1 for Login");
				int a = sc.nextInt();	
				switch (n) 
				{
				case 1: 
					r.Signup();
				}			
				m.mainmenu();
				break;
			case 2:
				r.Login();
				m.mainmenu();
				break;
			case 3:
				System.exit(0);
				break;
			default:
				System.out.println("PLEASE ENTER THE VALID INPUT");
				main(null);
				break;
			}
			
			Driver1 a=new Driver1();
	    }
			 {
				 System.out.println("******* THANKS FOR COMING HAVE A GREAT DAY ********** ");
			 }
     }
